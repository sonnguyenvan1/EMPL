<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <record id="pay_search_view" model="ir.ui.view">
        <field name="name">pay.search.view</field>
        <field name="model">emp.pay</field>
        <field name="arch" type="xml">
            <search string = 'Salary'>
                <field name="name"/>
                <field name="department"/>
                <field name="state"/>
                <separator/>
                <group expand="0" string="Group By">
                     <filter name="state_search" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pay_tree_view" model="ir.ui.view">
        <field name="name">pay.tree.view</field>
        <field name="model">emp.pay</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="account"/>
                <field name="department"/>
                <field name="numb" string = 'Lương trước điều chỉnh'/>
                <field name="numa" string="Lương sau điều chỉnh"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="pay_form_view" model="ir.ui.view">
        <field name="name">pay.form.view</field>
        <field name="model">emp.pay</field>
        <field name="arch" type="xml">
            <form class="o_lead_opportunity_form">
                <header>
<!--                    <button id = "id_emp_submit" name="emp_submit" string="Submit DL" type="object" class="btn-primary" states ="draft"/>-->
<!--                    <button id = "id_dl_submit" name="dl_submit" string="Submit BOD" type="object" class="btn-primary" states ="dl"/>-->
<!--                    <button id = "id_bod_submit" name="bod_submit" string="Approve" type="object" class="btn-primary" states ="bod"/>-->
<!--                    <button id = "id_reject_submit" name="reject_bod_submit" string="Reject" type="object" states ="dl,bod"/>-->
<!--                    <button id = "id_set_to_draft" name="std_emp_submit" string="set to Draft" type="object" states ="reject"/>-->
                    <field name="state" widget="statusbar" statusbar_visible = "draft,dl,bod,approve"/>
                </header>
                <sheet>
                <group>
                    <field name="name"/>
                    <field name="account"/>
                    <field name="department"/>
                    <field name="numb"/>
                    <field name="req"/>
                    <field name="numa"/>
                    <field name="ly_do"/>
                </group>

                <notebook>
                            <page name="public" string="Thông Tin Hợp Đồng">
                                    <group>
                                        <field name="hop_dong"/>
                                        <field name="date_start"/>
                                    </group>
                            </page>
                            <page name="skill-point" string="Check poin - Skill point">

                            </page>
                </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="inherited_emp_submit_form" model="ir.ui.view">
        <field name="name">inherited.emp_review_form</field>
        <field name="model">emp.pay</field>
        <field name="inherit_id" ref="pay_form_view"/>
        <field name="groups_id" eval="[(4, ref('group_emp_user'))]"/>
        <field name="arch" type="xml">
            <header>
                    <button id = "id_emp_submit" name="emp_submit" string="Submit DL" type="object" confirm="Are you sure?" class="btn-primary" states ="draft"/>
                    <button id = "id_set_to_draft" name="std_emp_submit" string="set to Draft" type="object" confirm="Are you sure?" states ="reject"/>
            </header>
        </field>
    </record>

    <record id="inherited_dl_submit_form" model="ir.ui.view">
        <field name="name">inherited.dl_review_form</field>
        <field name="model">emp.pay</field>
        <field name="inherit_id" ref="pay_form_view"/>
        <field name="groups_id" eval="[(4, ref('group_dl_user'))]"/>
        <field name="arch" type="xml">
            <header>
                    <button id = "id_dl_submit" name="dl_submit" string="Submit BOD" type="object" confirm="Are you sure?" class="btn-primary" states ="dl"/>
                    <button id = "id_reject_submit" name="%(EMPL.action_creat_reject)d" string="Reject" type="action" states ="dl"/>
            </header>
        </field>
    </record>

    <record id="inherited_bod_submit_form" model="ir.ui.view">
        <field name="name">inherited.bod_review_form</field>
        <field name="model">emp.pay</field>
        <field name="inherit_id" ref="pay_form_view"/>
        <field name="groups_id" eval="[(4, ref('group_bod_user'))]"/>
        <field name="arch" type="xml">
            <header>
                    <button id = "id_bod_submit" name="bod_submit" string="Approve" type="object" confirm="Are you sure?" class="btn-primary" states ="bod"/>
                    <button id = "id_reject_bod" name="reject_bod_submit" string="Reject" type="object" states ="bod"/>
            </header>
        </field>
    </record>
</odoo>
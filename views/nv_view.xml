<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <record id="pay_search_view" model="ir.ui.view">
        <field name="name">pay.search.view</field>
        <field name="model">emp.pay</field>
        <field name="arch" type="xml">
            <search string = 'Salary'>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="state"/>
                <separator/>
                <group expand="0" string="Group By">
                     <filter name="state_search" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="pay_tree_view" model="ir.ui.view">
        <field name="name">pay.tree.view</field>
        <field name="model">emp.pay</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
<!--                <field name="account"/>-->
                <field name="department_id"/>
<!--                <field name="numb" string = 'Lương trước điều chỉnh'/>-->
<!--                <field name="numa" string="Lương sau điều chỉnh"/>-->
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="pay_form_view" model="ir.ui.view">
        <field name="name">pay.form.view</field>
        <field name="model">emp.pay</field>
        <field name="arch" type="xml">
            <form class="o_lead_opportunity_form">
                <header>
                    <button id = "id_emp_submit" name="emp_submit" string="Submit DL" type="object" class="btn-primary" states ="draft"/>
                    <button id = "id_dl_submit" name="dl_submit" string="Submit BOD" type="object" class="btn-primary" states ="dl"/>
                    <button id = "id_bod_submit" name="bod_submit" string="Approve" type="object" class="btn-primary" states ="bod"/>
                    <button id = "id_reject_bod" name="reject_bod_submit" string="Reject" type="object" states ="bod"/>
                    <button id = "id_reject_dl" name="%(EMPL.action_creat_reject)d" string="Reject" type="action" states ="dl"/>
                    <button id = "id_set_to_draft" name="std_emp_submit" string="set to Draft" type="object" states ="reject"/>
                    <field name="state" widget="statusbar" statusbar_visible = "draft,dl,bod,approve"/>
                </header>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="user_id"/>
                        <field name="department_id"/>
                        <field name="job_id"/>
                        <field name="job_title"/>
                        <field name="wage"/>
                        <field name="req"/>
                        <field name="numa"/>
                        <field name="ly_do"/>
                    </group>

                    <notebook>
                            <page name="public" string="Thông Tin Hợp Đồng">
                                    <group>
                                        <field name="contracts_id"/>
<!--                                        <field name="date_start"/>-->
                                    </group>
                            </page>
                            <page name="skill-point" string="Check poin - Skill point">

                            </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>


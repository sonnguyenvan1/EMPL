<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<data>
     <record id="creat_reject_form" model="ir.ui.view">
        <field name="name">creat.reject.form</field>
        <field name="model">creat.reject.wizard</field>
<!--         <field name="context">{'default_employee_id' = active}</field>-->
<!--         <field name="groups_id" eval="[(4, ref('group_dl_user'))]"/>-->
        <field name="arch" type="xml">
            <form>

                    <field name="reject"/>

                <footer>
                    <button name="reject_dl_submit" string="Reject" type="object" class="btn-primary"/>
                    <button string="Cancel" special = "cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_creat_reject" model="ir.actions.act_window">
        <field name="name">Reject</field>
        <field name="res_model">creat.reject.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref = "creat_reject_form" />
        <field name="target">new</field>
    </record>

</data>
</odoo>
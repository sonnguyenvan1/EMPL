<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
<!--        Send mail to Emp: Approve-->
        <record id="mail_template_emp_app" model="mail.template">
            <field name="name">VTI.Result APP DCL</field>
            <field name="model_id" ref="model_emp_pay"/>
            <field name="subject">EMP APP</field>
            <field name="email_from">${'no-reply@vti.com.vn'}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="body_html" type="html">
                <p>Dear anh/chi, </p>
                <p>De xuat dieu chinh luong cua anh/chi da duoc approve</p>
                <p>Chi tiet xem tai: <a title="Chi tiet" href="http://localhost:8069/web#menu_id=221">Go to access</a> </p>
                <p>Regards,</p>
            </field>
        </record>
<!--        Send mail to Emp: Reject-->
        <record id="mail_template_emp_rej" model="mail.template">
            <field name="name">VTI.Result REJ DCL</field>
            <field name="model_id" ref="model_emp_pay"/>
            <field name="subject">EMP REJ</field>
            <field name="email_from">${'no-reply@vti.com.vn'}</field>
            <field name="email_to">${object.employee_id.work_email}</field>
            <field name="body_html" type="html">
                <p>Dear anh/chi, </p>
                <p>De xuat dieu chinh luong cua nhan vien ${object.employee_id.name} da bi tu choi vi ly do ${object.notes} </p>
                <p>Chi tiet xem tai: <a title="Chi tiet" href="http://localhost:8069/web#menu_id=221">Go to access</a> </p>
                <p>Regards,</p>
            </field>
        </record>
<!--        Send mail to DL: Review-->
        <record id="mail_template_dl_rev" model="mail.template">
            <field name="name">VTI.DL Review</field>
            <field name="model_id" ref="model_emp_pay"/>
            <field name="subject">DL REVIEW</field>
            <field name="email_from">${'no-reply@vti.com.vn'}</field>
            <field name="email_to">${object.employee_id.parent_id.work_email or ''}</field>
            <field name="body_html" type="html">
                <p>Dear anh/chi, </p>
                <p>Nhan vien ${object.employee_id.name} co de xuat dieu chinh luong</p>
                <p>Chi tiet xem tai: <a title="Chi tiet" href="http://localhost:8069/web#menu_id=221">Go to access</a> </p>
                <p>Regards,</p>
            </field>
        </record>
<!--        Send mail to BOD: Review-->
        <record id="mail_template_bod_rev" model="mail.template">
            <field name="name">VTI.BOD Review</field>
            <field name="model_id" ref="model_emp_pay"/>
            <field name="subject">BOD REVIEW:bodbod</field>
            <field name="email_from">${'no-reply@vti.com.vn'}</field>
            <field name="email_to">${object.manager_id.work_email}</field>
            <field name="body_html" type="html">
                <p>Dear anh/chi, </p>
                <p>Nhan vien ${object.employee_id.name} co de xuat dieu chinh luong</p>
                <p>Chi tiet xem tai: <a title="Chi tiet" href="http://localhost:8069/web#menu_id=221">Go to access</a> </p>
                <p>Regards,</p>
            </field>
        </record>
        <record id="mail_template_hr_app" model="mail.template">
            <field name="name">VT.HR App</field>
            <field name="model_id" ref="model_emp_pay"/>
            <field name="subject">HR APPROVE</field>
            <field name="email_from">${'no-reply@vti.com.vn'}</field>
            <field name="email_to">${object.manager_id.parent_id.work_email}</field>
            <field name="body_html" type="html">
                <p>Dear anh/chi,</p>
                <p>De xuat dieu chinh luong cua nhan vien ${object.employee_id.name} da duoc approve</p>
                <p>Thoa thuan thu nhap da duoc tao tu dong.</p>
                <p>Chi tiet xem tai: Go to access</p>
                <p>Regards,</p>
            </field>
        </record>
    </data>
</odoo>